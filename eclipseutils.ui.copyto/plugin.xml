<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="targets" name="%extension-point.name" schema="schema/targets.exsd"/>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution locationURI="popup:org.eclipse.ui.popup.any?after=copy" class="eclipseutils.ui.copyto.internal.MenuFactory"/>
      <menuContribution locationURI="popup:org.eclipse.ui.popup.any?after=org.eclipse.ui.edit.copy" class="eclipseutils.ui.copyto.internal.MenuFactory"/>
      <menuContribution locationURI="menu:edit?after=copy" class="eclipseutils.ui.copyto.internal.MenuFactory"/>
      <menuContribution locationURI="toolbar:org.eclipse.ui.workbench.file?before=print">
            <command
                  commandId="eclipseutils.ui.copyto.dropdown" id="eclipseutils.ui.copyto.menu" label="CopyTo"
                  style="pulldown">
            </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="eclipseutils.ui.copyto"
            name="%menu.label">
         <commandParameter
               id="url"
               name="%commandParameter.url.name"
               optional="false">
         </commandParameter>
         <commandParameter
               id="params"
               name="%commandParameter.params.name"
               optional="false">
         </commandParameter>
         <commandParameter
               id="id"
               name="%commandParameter.id.name"
               optional="true">
         </commandParameter>
         <state
               class="eclipseutils.ui.copyto.internal.LastCommandState"
               id="lastId">
         </state>
      </command>
      <command
            id="eclipseutils.ui.copyto.dropdown"
            name="CopyTo">
      </command>      
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="eclipseutils.ui.copyto.internal.CopyToHandler"
            commandId="eclipseutils.ui.copyto">
      </handler>
      <handler
            class="eclipseutils.ui.copyto.internal.CopyToDropDownHandler"
            commandId="eclipseutils.ui.copyto.dropdown">
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="eclipseutils.ui.copyto.isCopyable">
         <with
               variable="activeMenuSelection">
               <or>
            <instanceof
                  value="org.eclipse.jface.text.ITextSelection">
            </instanceof>
            <iterate
                  operator="or">
               <or>
                  <adapt
                        type="eclipseutils.ui.copyto.api.Copyable">
                  </adapt>
                  <adapt
                        type="org.eclipse.core.resources.IResource">
                  </adapt>
               </or>
            </iterate>
         </or>
         </with>         
      </definition>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="eclipseutils.ui.copyto.internal.PreferenceInitializer">
      </initializer>
   </extension>   
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="eclipseutils.ui.copyto.api.json.MapResponse"
            class="eclipseutils.ui.copyto.internal.AdapterFactory">
         <adapter
               type="java.net.URL">
         </adapter>
      </factory>
   </extension>    
</plugin>
